<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Hardcoded Tomcat logs directory -->
    <property name="LOG_DIR" value="C:/mail/logs"/>

    <!-- Define a rolling file appender -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/mail_reader.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <!-- Rolling policy: 10MB per file, max 10 files per day, date-based rotation -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/mail_reader-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <maxHistory>10</maxHistory> <!-- Keeps only the last 10 files per day -->
            <totalSizeCap>500MB</totalSizeCap> <!-- Prevents excessive disk usage -->
        </rollingPolicy>
    </appender>

    <!-- Root logger level -->
    <root level="INFO">
        <appender-ref ref="ROLLING_FILE"/>
    </root>

</configuration>
